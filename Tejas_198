from sympy import symbols, simplify
x = symbols('x')
f = x**2 - 2.6*x + 2
a, b = -2, 3
n = 6
F = [1, 1, 2, 3, 5, 8, 13]
for k in range(1, n + 1):
    l_k = (F[n - k] / F[n - k + 1]) * (b - a)
    x1=b-l_k
    x2=a+l_k
    f_x1=f.subs({x:x1})
    f_x2=f.subs({x:x2})
    print(f"Iteration {k}:")
    print(f"  lk = {l_k}")
    print(f"  x1 = {x1}")
    print(f"  x2 = {x2}")
    print(f"  f(x1) = {f_x1}")
    print(f"  f(x2) = {f_x2}")
    print(f"  New interval: [{a}, {b}]\n")
    if f_x1 > f_x2:
        a = x1
    else:
        b = x2
x_min = (a + b) / 2
f_min = f.subs(x, x_min)
print("X value:",x_min)
print("Minimum value:",f_min)

