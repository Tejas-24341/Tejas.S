import numpy as np
import sympy as sp
import matplotlib.pyplot as plt
a=np.matrix([[ 19,22,6,3,2,20],[12,6,9,15,13,5]])
x1=np.mean(a[0])
x2=np.mean(a[1])
X = np.matrix(np.array([a[0] - x1, a[1] - x2]))
n =(a.shape[1])
s=1/(n-1)*(X@X.T)
eigenvalues, eigenvectors = np.linalg.eig(s)
m=np.argmax(eigenvalues)
v=eigenvectors[:,m]
y=v.T@X
display(y)



